<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>

        <!-- //框为矩形 -->
        <shape android:shape="rectangle" >
            <solid android:color="#FFFFFF" />
            <!-- //用白色来填充里面 -->
            <!-- //边框是1dp的线 -->
            <stroke
                android:width="1dp"
                android:color="#AEAEAE" />

            <corners android:radius="5dp" />
            <!-- //边框的圆角的弧度 -->
        </shape>
    </item>

</layer-list>