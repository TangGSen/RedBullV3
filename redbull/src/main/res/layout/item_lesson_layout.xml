<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/img_course_item"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="@dimen/common_16dp"
        android:layout_marginTop="@dimen/common_16dp"
        android:background="@mipmap/coursedefault"
        android:scaleType="fitXY" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_toRightOf="@+id/img_course_item"
            android:id="@+id/tv_course_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_8dp"
            android:layout_marginTop="@dimen/common_4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/font_h1"
            android:textSize="16sp" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_below="@id/tv_course_name"
            android:layout_toRightOf="@+id/img_course_item"
            android:id="@+id/tv_create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_4dp"
            android:layout_marginLeft="@dimen/common_8dp"
            android:ellipsize="end"
            android:layout_marginRight="5dp"
            android:singleLine="true"
            android:text="上传时间：2015-07-14 10:20：30"
            android:textColor="@color/font_h2"
            android:textSize="14sp" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_below="@id/tv_create_time"
            android:layout_toRightOf="@+id/img_course_item"
            android:id="@+id/tv_course_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginTop="@dimen/common_4dp"
            android:layout_marginLeft="@dimen/common_8dp"
            android:text="标准学分"
            android:textColor="@color/font_h2"
            android:textSize="14sp" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_below="@id/tv_course_score"
            android:layout_toRightOf="@+id/img_course_item"
            android:id="@+id/tv_course_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="@dimen/common_4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="标准学时"
            android:textColor="@color/font_h2"
            android:textSize="14sp" />

</RelativeLayout>