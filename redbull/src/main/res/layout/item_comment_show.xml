<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/imv_commemt_user"
        android:gravity="center_vertical"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:scaleType="fitXY"
        android:src="@mipmap/defuser_head" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/imv_commemt_user"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_comment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:text="姓名"
            android:textColor="@color/user_common_name"
            android:textSize="@dimen/fragment_font_16sp" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_marginTop="@dimen/frgment_login_8dp"
            android:id="@+id/tv_comment_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginRight="@dimen/common_8dp"
            android:layout_margin="2dp"
            android:text="评论内容"
            android:textColor="@color/secondary_text"
            android:textSize="14sp" />
    </LinearLayout>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_comment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/common_8dp"
        android:gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:text="时间"
        android:textColor="@color/secondary_text" />

</RelativeLayout>